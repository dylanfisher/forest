<div class="btn-group pull-right" role="group">
  <%= link_to_remove_association f,
        class: 'block-slot-field__button--low-priority btn btn-xs btn-default',
        title: 'Remove block',
        data: {
          confirm: "Are you sure you want to remove this block?" } do %>
    <div class="glyphicon glyphicon-remove"></div>
  <% end %>
  <button type="button" class="block-slot-field__button--low-priority btn btn-xs btn-default" data-block-add title="Add block">
    <div class="glyphicon glyphicon-plus"></div>
  </button>
  <button type="button" class="btn btn-xs btn-default" data-block-collapser title="Collapse block">
    <div class="glyphicon glyphicon-minus"></div>
  </button>
</div>

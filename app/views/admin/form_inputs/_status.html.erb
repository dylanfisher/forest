<% if record.statusable? %>
  <div class="status-scheduler">
    <%= f.input :status, as: :select, collection: record.class.statuses.collect { |k, v| [k.titleize, k] }, include_blank: false %>
    <% if record.respond_to?(:scheduled_date) %>
      <%= f.input :scheduled_date, as: :string, wrapper_html: { class: ('active' if record.scheduled?) } %>
    <% end %>
  </div>
<% end %>

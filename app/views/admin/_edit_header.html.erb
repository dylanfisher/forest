<div class="admin-header">
  <% if notice %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= record.class.model_name.singular.titleize %> <%= record.id %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-7">
          <h1>
            <%= record.try(:display_name) || record.try(:title) || record.try(:name) %>
            <% if record.is_a? Page %>
              <%= link_to "<span class='badge'>#{record.versions.count} versions</span>".html_safe, page_versions_path(record) %>
            <% end %>
          </h1>
        </div>
        <div class="col-sm-5 text-right">
          <div class="btn-group">
            <% if respond_to? "show_#{record.class.model_name.singular_route_key}_path" %>
              <%= link_to "View #{record.class.model_name.singular.titleize}", send("show_#{record.class.model_name.singular_route_key}_path", record), class: 'btn btn-primary' %>
            <% else %>
              <%= link_to "View #{record.class.model_name.singular.titleize}", send("#{record.class.model_name.singular_route_key}_path", record), class: 'btn btn-primary' %>
            <% end %>
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to "All #{record.class.model_name.plural.titleize}", send("#{record.class.model_name.route_key}_path") %></li>
              <li><%= link_to "New #{record.class.model_name.singular.titleize}", send("new_#{record.class.model_name.singular_route_key}_path") %></li>
            </ul>
          </div>
          <div class="btn btn-success update-record-button">Update <%= record.class.model_name.singular.titleize %></div>
        </div>
      </div>
    </div>
  </div>
</div>

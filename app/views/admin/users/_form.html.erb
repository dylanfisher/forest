<%= simple_form_for([:admin, @user]) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-12">

      <div class="panel panel-default" data-collapse-parent>
        <div class="panel-heading">
          <h3 class="panel-title">
            Metadata
          </h3>
        </div>
        <div class="panel-body" data-collapse-body>
          <div class="form-inputs">
            <div class="row">
              <div class="col-sm-6">
                <%= f.input :email, required: true, autofocus: true %>
                <%= f.input :first_name %>
                <%= f.input :last_name %>
                <%= f.input :password, required: @user.new_record?, hint: '6 characters minimum' %>
                <%= f.input :password_confirmation, required: @user.new_record? %>
                <% unless @user.new_record? %>
                  <div class="form-group">
                    <%= link_to "Send password reset link to this user's email.", admin_user_reset_password_path(@user) %>
                  </div>
                <% end %>

                <%= f.button :submit, class: 'btn-success' %>
              </div>
              <div class="col-sm-6">
                <%= f.association :user_groups %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

<% end %>

<div class="admin-header">
  <div class="well">
    <h1>
      Dashboard
      <span class="badge" title="<%= number_with_delimiter(@admin_resources.count) %> total resources"><%= number_with_delimiter @admin_resources.count %></span>
    </h1>
  </div>
</div>

<div class="table-responsive">
  <table class="forest-table table table-striped">
    <thead>
      <tr>
        <th width="10%">Index</th>
        <th width="80%">Resource type</th>
        <th width="10%">Count</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_resources.each_with_index do |resource, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= resource.model_name.human.titleize.pluralize %></td>
          <td><%= number_with_delimiter resource.count %></td>
          <td width="1"><%= link_to 'Edit', polymorphic_path([:admin, resource]), class: 'btn btn-xs btn-info forest-table__link', role: 'button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

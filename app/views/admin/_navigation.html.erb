<%# TODO: Add ability to easily add to the admin navigation via the host app %>
<%# TODO: DRY this file up with link helpers %>
<nav class="navbar navbar-default">
  <div class="container-fluid <%= admin_navbar_class %>">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#forest-navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-tree-conifer'), admin_path, class: 'navbar-brand', title: 'Dashboard' %>
    </div>

    <div class="collapse navbar-collapse" id="forest-navbar-collapse">
      <%= render 'admin/shared/navigation/navbar' %>
      <ul class="nav navbar-nav navbar-right">
        <% if @record %>
          <li>
            <% if @record.statusable? %>
              <p class="navbar-text">
                <%= content_tag :span, t(@record.status, scope: [:forest, @record.class.model_name.i18n_key, :status]), class: 'badge', title: "#{@record.class.model_name.human} Status" %>
              </p>
            <% end %>
            <% if public_area? %>
              <p class="navbar-text">
                <%= link_to "Edit #{@record.class.model_name.singular}", send("edit_#{@record.class.model_name.singular_route_key}_path", @record) %>
              </p>
            <% end %>
          </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Settings <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li class="<%= admin_navbar_active_class(admin_settings_path) %>">
              <%= link_to 'General', admin_settings_path %>
            </li>
            <li role="separator" class="divider"></li>
            <li>
              <%= link_to 'Clear Cache', admin_cache_purge_index_path, data: { confirm: "Are you sure you wan't to clear the website cache? Performance may decrease while cache rebuilds." } %>
            </li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= current_user.display_name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to('Edit My Profile', edit_admin_user_path(current_user)) %></li>
            <li><%= link_to 'View Home Page', root_path %></li>
            <li><%= link_to 'Forest Docs', admin_documentation_path, title: 'Learn more about this CMS and how to use it.' %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to('Log out', destroy_user_session_path, :method => :delete) %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

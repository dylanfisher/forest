<%# TODO: DRY this file up with link helpers %>

<nav class="navbar navbar-default">
  <div class="container-fluid <%= admin_navbar_class %>">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-tree-conifer'), admin_path, class: 'navbar-brand', title: 'Dashboard' %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to Setting.for('site-title').value, root_path, title: 'Visit Site' %></li>
        <li class="<%= admin_navbar_active_class(admin_path) %>"><%= link_to 'Dashboard', admin_path %></li>
        <li class="<%= admin_navbar_active_class(pages_path) %>"><%= link_to 'Pages', pages_path %></li>
        <li class="<%= admin_navbar_active_class(media_items_path) %>"><%= link_to 'Media', media_items_path %></li>
        <li class="<%= admin_navbar_active_class(users_path) %>"><%= link_to 'Users', users_path %></li>
        <li class="<%= admin_navbar_active_class(menus_path) %>"><%= link_to 'Menus', menus_path %></li>
        <%# TODO: Add ability to easily add to the admin navigation via the host app %>
        <%# TODO: add resources list to dropdown %>
        <% if false %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Appearance <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Menus', menus_path %></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if @version && @record %>
          <li><%= link_to 'Restore', send("restore_#{@record.class.model_name.singular_route_key}_version_path", @record, @version), title: 'Restore this version', role: 'button', data: { confirm: 'Are you sure you want to restore this version to the current version?' } %></li>
          <li>
            <p class="navbar-text">
              <%= content_tag :span, "Version #{@version.id}", class: 'badge', title: '#{@record.class.model_name.human} Version' %>
            </p>
          </li>
        <% end %>
        <% if @record %>
          <li>
            <p class="navbar-text">
              <%= content_tag :span, t(@record.status, scope: [@record.class.model_name.i18n_key, :status]), class: 'badge', title: "#{@record.class.model_name.human} Status" %>
            </p>
            <% if public_area? %>
              <p class="navbar-text">
                <%= link_to "Edit #{@record.class.model_name.singular}", send("edit_#{@record.class.model_name.singular_route_key}_path", @record) %>
              </p>
            <% end %>
          </li>
        <% end %>
        <li class="<%= admin_navbar_active_class(settings_path) %>"><%= link_to 'Settings', settings_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= current_user.display_name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to('Edit My Profile', edit_user_path(current_user)) %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to('Log out', destroy_user_session_path, :method => :delete) %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<%= render 'admin/headers/index', records: @user_groups, model_name: 'UserGroup' %>

<div class="table-responsive">
  <table class="forest-table table table-striped">
    <thead>
      <tr>
        <th><%= table_sorter title: 'Name', path: :user_groups_path, scope: :by_name, default_order: :asc %></th>
        <th><%= table_sorter title: 'Created&nbsp;at'.html_safe, path: :user_groups_path, scope: :by_created_at, default_order: :desc %></th>
        <th><%= table_sorter title: 'Updated&nbsp;at'.html_safe, path: :user_groups_path, scope: :by_updated_at, default_order: :desc %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user_groups.each do |user_group| %>
        <tr>
          <td><%= user_group.name %></td>
          <td><%= user_group.created_at.to_formatted_s(:short) %></td>
          <td><%= user_group.updated_at.to_formatted_s(:short) %></td>
          <td width="1"><%= link_to 'Edit', edit_user_group_path(user_group), class: 'btn btn-xs btn-primary', role: 'button' %></td>
          <td width="1"><%= link_to 'Show', user_group, class: 'btn btn-xs btn-info', role: 'button' %></td>
          <td width="1"><%= link_to 'Destroy', user_group, method: :delete, class: 'btn btn-xs btn-danger', role: 'button', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @user_groups %>

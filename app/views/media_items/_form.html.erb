<%= simple_form_for(@media_item) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-12">

      <div class="panel panel-default" data-collapse-parent>
        <div class="panel-heading">
          <h3 class="panel-title">
            Metadata
          </h3>
        </div>
        <div class="panel-body" data-collapse-body>
          <div class="form-inputs">
            <div class="row">
              <div class="col-sm-6">
                <%= f.input :attachment %>
                <%= f.input :title %>
                <%= f.input :slug %>
                <%= f.input :caption %>
                <%= f.input :alternative_text %>
                <%= f.input :description %>
                <%= f.button :submit, class: 'btn-success' %>
              </div>
              <div class="col-sm-6">
                <% if @media_item.attachment.present? %>
                  <% if @media_item.image? %>
                    <%= image_tag @media_item.attachment.url(:medium) %>
                  <% else %>
                    <%= link_to media_item.attachment.url, class: 'blank-link', target: '_blank' do %>
                      <%= content_tag :div, class: 'media-item-file img-rounded', title: 'Open file' do %>
                        <%= content_tag :span, '', class: "media-library-image--grid__icon glyphicon #{media_item.glyphicon}" %>
                        <%= content_tag :div, media_item.attachment_file_name, class: "media-library-image__label well" %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>

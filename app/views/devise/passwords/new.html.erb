<div class="devise-card">
  <h1 class="h2 text-center mb-3">Forgot your password?</h1>
  <%= render 'admin/flash_notifications' %>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
    <%= f.button :submit, 'Send me reset password instructions', class: 'btn btn-primary btn-block' %>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>

<div class="devise-card">
  <h1 class="h2 text-center mb-3">Resend confirmation instructions</h1>
  <% if flash.present? %>
    <div class="mb-3">
      <%= render 'admin/flash_notifications' %>
    </div>
  <% end %>
  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :confirmation_token %>
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
    <%= f.button :submit, 'Resend confirmation instructions', class: 'btn btn-primary btn-block' %>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>

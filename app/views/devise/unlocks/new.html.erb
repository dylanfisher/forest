<div class="devise-card">
  <h1 class="h2 text-center mb-3">Resend unlock instructions</h1>
  <%= render 'admin/flash_notifications' %>
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
    <%= f.button :submit, 'Resend unlock instructions', class: 'btn btn-primary btn-block' %>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>

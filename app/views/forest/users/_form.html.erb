<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-12">

      <div class="panel panel-default" data-collapse-parent>
        <div class="panel-heading">
          <h3 class="panel-title">
            Metadata
          </h3>
        </div>
        <div class="panel-body" data-collapse-body>
          <div class="form-inputs">
            <div class="row">
              <div class="col-sm-6">
                <%= f.input :email, required: true, autofocus: true %>
                <%= f.input :password, required: true, hint: ("6 characters minimum") if @user.new_record? %>
                <%= f.input :password_confirmation, required: true if @user.new_record? %>
                <%= f.input :first_name %>
                <%= f.input :last_name %>
                <%= f.button :submit, class: 'btn-success' %>
              </div>
              <div class="col-sm-6">
                <%= f.association :user_groups %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

<% end %>

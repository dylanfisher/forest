<nav class="navbar navbar-default">
  <div class="container-fluid <%= admin_navbar_class %>">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-tree-conifer'), Forest::Engine.routes.url_helpers.admin_path, class: 'navbar-brand', title: 'Dashboard' %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to Setting.for(:site_title).value, Forest::Engine.routes.url_helpers.root_path, title: 'Visit Site' %></li>
        <li><%= link_to 'Dashboard', Forest::Engine.routes.url_helpers.admin_path %></li>
        <li><%= link_to 'Pages', Forest::Engine.routes.url_helpers.pages_path %></li>
        <li><%= link_to 'Media', Forest::Engine.routes.url_helpers.media_items_path %></li>
        <li><%= link_to 'Users', Forest::Engine.routes.url_helpers.users_path %></li>
        <li><%= link_to 'Menus', Forest::Engine.routes.url_helpers.menus_path %></li>
        <% if false %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Appearance <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Menus', Forest::Engine.routes.url_helpers.menus_path %></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if @version %>
          <li><%= link_to 'Restore', Forest::Engine.routes.url_helpers.restore_page_version_path(@page, @version), title: 'Restore this version', role: 'button', data: { confirm: 'Are you sure you want to restore this version to the current version?' } %></li>
          <li>
            <p class="navbar-text">
              <%= content_tag :span, "Version #{@version.id}", class: 'badge', title: 'Page Version' %>
            </p>
          </li>
        <% end %>
        <% if @page %>
          <li>
            <p class="navbar-text">
              <%= content_tag :span, t(@page.status, scope: [:page, :status]), class: 'badge', title: 'Page Status' %>
            </p>
            <% if public_area? %>
              <p class="navbar-text">
                <%= link_to 'Edit page', Forest::Engine.routes.url_helpers.edit_page_path(@page) %>
              </p>
            <% end %>
          </li>
        <% end %>
        <li><%= link_to 'Settings', Forest::Engine.routes.url_helpers.settings_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= current_user.display_name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to('Edit My Profile', Forest::Engine.routes.url_helpers.edit_user_path(current_user)) %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to('Log out', Forest::Engine.routes.url_helpers.destroy_user_session_path, :method => :delete) %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">Change your password</h1>
      </div>

      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Change my password', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

      <div class="panel-footer">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>

<%= simple_form_for(@menu) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-12">

      <div class="panel panel-default" data-collapse-parent>
        <div class="panel-heading">
          <h3 class="panel-title">
            Metadata
          </h3>
        </div>
        <div class="panel-body" data-collapse-body>
          <div class="form-inputs">
            <div class="row">
              <div class="col-sm-6">
                <%= f.input :title %>
                <%= f.input :slug %>
                <%= f.input :structure, as: :hidden %>
                <%= f.button :submit, class: 'btn-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <button type="button" class="btn btn-primary" id="menu__add-item-button">Add menu item</button>
          <br><br>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="well">
            <div class="dd dd-temporary" id="menu__new-item-placeholder">
              <div class="dd-empty"></div>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="dd" id="dd-primary">
            <% if @menu.structure_as_json.present? %>
              <ol class="dd-list">
                <%= render partial: 'list_item', collection: @menu.structure_as_json %>
              </ol>
            <% else %>
              <div class="dd-empty"></div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>

<% end %>

<%= render 'admin/headers/index', records: @users, model_name: 'User' %>

<div class="table-responsive">
  <table class="forest-table table table-striped">
    <thead>
      <tr>
        <th><%= table_sorter title: 'ID', path: :users_path, scope: :by_id, default_order: :desc %></th>
        <th><%= table_sorter title: 'Email', path: :users_path, scope: :by_email, default_order: :asc %></th>
        <th><%= table_sorter title: 'Last name', path: :users_path, scope: :by_last_name, default_order: :asc %></th>
        <th><%= table_sorter title: 'First name', path: :users_path, scope: :by_first_name, default_order: :asc %></th>
        <th>User&nbsp;groups</th>
        <th><%= table_sorter title: 'Created&nbsp;at'.html_safe, path: :users_path, scope: :by_created_at, default_order: :desc %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.last_name %></td>
          <td><%= user.first_name %></td>
          <td><%= user.user_groups.collect(&:display_name).join(', ') %></td>
          <td><%= user.created_at.to_formatted_s(:short) %></td>
          <td width="1"><%= link_to 'Show', user, class: 'btn btn-xs btn-primary', role: 'button' %></td>
          <td width="1"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-info', role: 'button' %></td>
          <td width="1"><%= link_to 'Destroy', user, method: :delete, class: 'btn btn-xs btn-danger', role: 'button', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users %>

<%= csrf_meta_tags %>

<!-- Basic meta tags -->
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="description" content="<%= page_description %>">
<%= tag(:meta, name: 'keywords', content: page_keywords) if page_keywords.present? %>
<%= tag :meta, name: 'viewport', content: meta_viewport %>

<!-- Open graph meta tags -->
<%= tag :meta, property: 'og:url', content: meta_url %>
<%= tag :meta, property: 'og:description', content: page_description %>
<%= tag :meta, property: 'og:title', content: page_title %>
<%= tag :meta, property: 'og:site_name', content: site_title %>
<%= tag :meta, property: 'og:type', content: meta_type %>
<%= tag :meta, property: 'og:see_also', content: meta_see_also %>

<!-- Google meta tags -->
<%= tag :meta, itemprop: 'name', content: page_title %>
<%= tag :meta, itemprop: 'description', content: page_description %>

<!-- Twitter meta tags -->
<%= tag :meta, itemprop: 'twitter:card', content: 'summary' %>
<%= tag :meta, itemprop: 'twitter:url', content: request.original_url %>
<%= tag :meta, itemprop: 'twitter:title', content: page_title %>
<%= tag :meta, itemprop: 'twitter:description', content: page_description %>

<% if page_featured_image.present? %>
<!-- Featured image -->
<%= tag :meta, property: 'og:image', content: page_featured_image %>
<%= tag :meta, itemprop: 'image', content: page_featured_image %>
<%= tag :meta, itemprop: 'twitter:image', content: page_featured_image %>
<% end %>

<% if additional_meta_tags.present? %>
<!-- Additional meta tags -->
<%= additional_meta_tags %>
<% end %>

<!-- Favicons -->
<link rel="apple-touch-icon" href="<%= asset_path 'forest/favicons/apple-touch-icon.png' %>" sizes="180x180">
<link rel="icon" type="image/png" href="<%= asset_path 'forest/favicons/favicon-32x32.png' %>" sizes="32x32">
<link rel="icon" type="image/png" href="<%= asset_path 'forest/favicons/favicon-16x16.png' %>" sizes="16x16">
<link rel="manifest" href="<%= asset_path 'forest/favicons/manifest.json' %>">
<link rel="mask-icon" href="<%= asset_path 'forest/favicons/safari-pinned-tab.svg' %>" color="#5bbad5">
<meta name="theme-color" content="#ffffff">

<!-- Analytics -->
<% if Rails.env.production? && Setting.for(:google_analytics).present? %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Setting.for(:google_analytics) %>"></script>
  <script>
    window.App = window.App || {};
    App.analytics = App.analytics || {};
    App.analytics.id = '<%= Setting.for(:google_analytics) %>';

    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', App.analytics.id);
  </script>
<% end %>

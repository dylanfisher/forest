<title><%= page_title %></title>
<%= csrf_meta_tags %>

<!-- Basic meta tags -->
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="description" content="<%= page_description %>">
<meta name="keywords" content="">
<meta name="viewport" content="width=device-width">

<!-- Facebook meta tags -->
<meta property="og:url" content="<%= request.original_url %>">
<% if page_featured_image %>
  <meta property="og:image" content="<%= page_featured_image %>">
<% end %>
<meta property="og:description" content="<%= page_description %>">
<meta property="og:title" content="<%= page_title %>">
<meta property="og:site_name" content="<%= site_title %>">
<meta property="og:see_also" content="<%= root_path %>">

<!-- Google meta tags -->
<meta itemprop="name" content="<%= page_title %>">
<meta itemprop="description" content="<%= page_description %>">
<% if page_featured_image %>
  <meta itemprop="image" content="<%= page_featured_image %>">
<% end %>

<!-- Twitter meta tags -->
<meta name="twitter:card" content="summary">
<meta name="twitter:url" content="<%= request.original_url %>">
<meta name="twitter:title" content="<%= page_title %>">
<meta name="twitter:description" content="<%= page_description %>">
<% if page_featured_image %>
  <meta name="twitter:image" content="<%= page_featured_image %>">
<% end %>

<!-- Favicons -->
<link rel="apple-touch-icon" href="<%= asset_path '/assets/forest/favicons/apple-touch-icon.png' %>" sizes="180x180">
<link rel="icon" type="image/png" href="<%= asset_path '/assets/forest/favicons/favicon-32x32.png' %>" sizes="32x32">
<link rel="icon" type="image/png" href="<%= asset_path '/assets/forest/favicons/favicon-16x16.png' %>" sizes="16x16">
<link rel="manifest" href="<%= asset_path '/assets/forest/favicons/manifest.json' %>">
<link rel="mask-icon" href="<%= asset_path '/assets/forest/favicons/safari-pinned-tab.svg' %>" color="#5bbad5">
<meta name="theme-color" content="#ffffff">

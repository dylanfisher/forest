<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <title><%= meta_page_title %></title>
    <%= csp_meta_tag %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'forest/application', media: 'all' %>
    <%= render 'admin/shared/admin_head_additions' %>
  </head>
  <body class="<%= @html_classes.try(:join, ' ') %> admin d-flex flex-column h-100">
    <%= render 'admin/navigation' %>
    <% if flash.present? %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <%= render 'admin/flash_notifications' %>
          </div>
        </div>
      </div>
    <% end %>
    <main role="main" class="flex-shrink-0 mt-3">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </main>
    <%= render 'admin/media_items/modal' %>
    <%= javascript_include_tag 'forest/application' %>
  </body>
</html>
